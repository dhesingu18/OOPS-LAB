Main GUI (FlightBookingGUI.java):



import javax.swing.*;

import java.awt.*;

import java.awt.event.*;

import java.sql.*;



public class FlightBookingGUI extends JFrame {

    JTextField nameField, ageField, contactField;

    JComboBox<String> flightBox;



    public FlightBookingGUI() {

        setTitle("Flight Booking System");

        setSize(400, 300);

        setLayout(new GridLayout(6, 2));



        add(new JLabel("Passenger Name:"));

        nameField = new JTextField();

        add(nameField);



        add(new JLabel("Age:"));

        ageField = new JTextField();

        add(ageField);



        add(new JLabel("Contact:"));

        contactField = new JTextField();

        add(contactField);



        add(new JLabel("Select Flight:"));

        flightBox = new JComboBox<>(new String[]{"101 - Chennai", "102 - Delhi", "103 - Mumbai"});

        add(flightBox);



        JButton bookBtn = new JButton("Book Flight");

        JButton viewBtn = new JButton("View Bookings");

        add(bookBtn);

        add(viewBtn);



        bookBtn.addActionListener(e -> bookFlight());

        viewBtn.addActionListener(e -> new ViewBookings());



        setDefaultCloseOperation(EXIT_ON_CLOSE);

        setVisible(true);

    }



    void bookFlight() {

        try {

            Class.forName("com.mysql.cj.jdbc.Driver");

            Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/flightdb?useSSL=false&allowPublicKeyRetrieval=true", "root", "your_password");

            String sql = "INSERT INTO bookings (flight_no, passenger_name, age, contact) VALUES (?, ?, ?, ?)";

            PreparedStatement stmt = con.prepareStatement(sql);



            String selected = (String) flightBox.getSelectedItem();

            int flightNo = Integer.parseInt(selected.split(" ")[0]);



            stmt.setInt(1, flightNo);

            stmt.setString(2, nameField.getText());

            stmt.setInt(3, Integer.parseInt(ageField.getText()));

            stmt.setString(4, contactField.getText());



            stmt.executeUpdate();

            JOptionPane.showMessageDialog(this, "Booking Successful!");

            con.close();

        } catch (Exception ex) {

            JOptionPane.showMessageDialog(this, "Booking Failed: " + ex.getMessage());

        }

    }



    public static void main(String[] args) {

        new FlightBookingGUI();

    }

}



View Bookings (ViewBookings.java):



import javax.swing.*;

import javax.swing.table.DefaultTableModel;

import java.awt.*;

import java.sql.*;



public class ViewBookings extends JFrame {

    JTable table;



    public ViewBookings() {

        setTitle("View All Bookings");

        setSize(500, 300);

        setLayout(new BorderLayout());



        table = new JTable();

        add(new JScrollPane(table), BorderLayout.CENTER);

        loadBookings();



        setVisible(true);

    }



    void loadBookings() {

        try {

            Class.forName("com.mysql.cj.jdbc.Driver");

            Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/flightdb?useSSL=false&allowPublicKeyRetrieval=true", "root", "your_password");

            Statement stmt = con.createStatement();

            ResultSet rs = stmt.executeQuery("SELECT * FROM bookings");



            DefaultTableModel model = new DefaultTableModel();

            model.addColumn("ID");

            model.addColumn("Flight No");

            model.addColumn("Passenger Name");

            model.addColumn("Age");

            model.addColumn("Contact");



            while (rs.next()) {

                model.addRow(new Object[]{

                    rs.getInt("id"),

                    rs.getInt("flight_no"),

                    rs.getString("passenger_name"),

                    rs.getInt("age"),

                    rs.getString("contact")

                });

            }

            table.setModel(model);

            con.close();

        } catch (Exception e) {

            JOptionPane.showMessageDialog(this, "Error: " + e.getMessage());

        }

    }

}